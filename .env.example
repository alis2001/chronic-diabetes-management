# .env.example - Environment Configuration Template
# Copy this file to .env and modify for your environment

# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================

# Environment Type: development, staging, production
ENVIRONMENT=development

# VM/Server Configuration
VM_HOST=localhost  # Change to 10.10.13.122 for VM deployment

# ========================================
# DATABASE CONFIGURATION
# ========================================

MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin123
MONGO_INITDB_DATABASE=diabetes_db

# Redis Configuration
REDIS_PASSWORD=redis123

# ========================================
# SERVICE PORTS
# ========================================

# Frontend Ports
TIMELINE_FRONTEND_PORT=3010
ANALYTICS_FRONTEND_PORT=3011
ADMIN_FRONTEND_PORT=3012

# Backend Service Ports
API_GATEWAY_PORT=8080
TIMELINE_SERVICE_PORT=8001
ANALYTICS_SERVICE_PORT=8002
SCHEDULER_SERVICE_PORT=8003
ADMIN_SERVICE_PORT=8084

# Infrastructure Ports
MONGODB_PORT=27018
REDIS_PORT=6381

# Development Tools
MONGO_EXPRESS_PORT=8081
REDIS_COMMANDER_PORT=8082

# ========================================
# URL CONFIGURATION (Environment-based)
# ========================================

# These will be auto-generated based on VM_HOST and ports
API_GATEWAY_URL=http://${VM_HOST}:${API_GATEWAY_PORT}
TIMELINE_FRONTEND_URL=http://${VM_HOST}:${TIMELINE_FRONTEND_PORT}
ANALYTICS_FRONTEND_URL=http://${VM_HOST}:${ANALYTICS_FRONTEND_PORT}
ADMIN_FRONTEND_URL=http://${VM_HOST}:${ADMIN_FRONTEND_PORT}

# ========================================
# CORS CONFIGURATION
# ========================================

# For development: use localhost
# For VM: use 10.10.13.122
CORS_ORIGINS=http://${VM_HOST}:${TIMELINE_FRONTEND_PORT},http://${VM_HOST}:${ANALYTICS_FRONTEND_PORT},http://${VM_HOST}:${ADMIN_FRONTEND_PORT},http://${VM_HOST}:${API_GATEWAY_PORT}

# ========================================
# DOCKER CONFIGURATION
# ========================================

# Docker Registry (for production deployment)
DOCKER_REGISTRY=your-dockerhub-username
IMAGE_TAG=latest

